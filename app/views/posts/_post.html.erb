<div id="<%= dom_id (post) %>">
 <h3>
     <strong>Title:</strong>

    <a href="<%= post_path(post) %>"><%= post.title %></a>
  </h3>
  

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email if post.user.present? %>
  </p>

<hr/>
</div>
